<header>
  <img id="logo" src="/images/logo.png" border="0" align="centered"/>

  <nav class="round">
    <ul>
      <% if signed_in? %>
        <img src = '<%= @current_user.imgPath %>' class="Logo">
      <li><%= @current_user.name %></li>
      <% end %>
      <li><%= link_to "Home", root_path %></li>
      <% if signed_in? %>
      <li><%= link_to "Projects", projects_path %></li>
      <li><%= link_to "Users", users_path %></li>
      <li><%= link_to "Send Message", "/newmessage" %></li>
      <% if  !@current_user.isClient? %>
        <li><%= link_to "Tickets", activetickets_path %></li>
      <% end %>
      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
      <% if @current_user.isAdmin? %>
      <li><%= link_to "Clients", clients_path %></li>
      <% end %>
      <li><%= link_to "Sign out", signout_path %></li>
      <% else %>
      <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
 
    </ul>
  </nav>
   
</header>