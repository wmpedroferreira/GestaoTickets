  <div class="tickets">
      <label for="Submitted_date_lbl">Submitted date:</label>
      <label for="Submitted_date_field"><%= @ticket.created_at %></label>
      <label for="user_id_lbl">User:</label>
      <% @u = User.find_by_id(@ticket.user_id) %>

      <label for="user_id_field"><%= @u.name %></label><br />
      <label for="project_id_lbl">Project:</label>
      <% @p = Project.find_by_id(@ticket.project_id) %>
      <label for="project_id_field"><%= @p.title %></label><br />
      <label for="state_id_lbl">State:</label>
      <label for="state_id_field"><%= @ticket.state_id %></label><br />
      <label for="urgency_id_lbl">Urgency:</label>
      <label for="urgency_id_field"><%= @ticket.urgency_id %></label><br />
      <label for="intervention_id_lbl">Intervention:</label>
      <label for="intervention_id_field"><%= @ticket.intervention_id %></label><br />
      <label for="request_type_id_lbl">Request type:</label>
      <label for="request_type_id_field"><%= @ticket.request_type_id %></label><br />
        <%= form_for(@log) do |t| %>
            <%= render 'shared/log_form', :t => t %>
         <% end %>
        <% unless @logs.empty? %>
        <table class="logs" id="logs2" summary="ticket logs" style="display: none" border ="2">
         <form>
              <input type=button name=type value='Hide Logs' onclick="hide2('logs2');";>
              <input type=button name=type value='Show Logs' onclick="show2('logs2');";>
         </form> 
         <% @logs.each do |log| %>        
           <tr>
             <td><label for="subject">Subject: </label><%= log.subject %></td>
             <td><label for="message">message: </label><%= log.message %></td>
             <td><label for="message">Data: </label><%= log.created_at %></td>
           </tr>
          <% end %> 
        </table>     
        <% end %>

  </div>